<!--index.wxml-->
<view class="swiper-tab fon14_333">
  <view class=" swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">到微信</view>
  <view class=" swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">到支付宝</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 60}}px" bindchange="bindChange">
  <!-- 到微信-->
  <swiper-item>
    <view class='W_shoplist pd_30'>
      <view class='W_shoplist_01 clearFix fon14_333 bd_ed'>
        <text class='fl'>账号</text>
        <input class='fl' placeholder='请输入微信账号'></input>
      </view>
      <view class='W_shoplist_01 clearFix fon14_333 bd_ed'>
        <text class='fl'>联系电话</text>
        <input class='fl' placeholder='请输入11位手机号' type='number'></input>
      </view>
      <view class='W_shoplist_02 bd_ed clearFix'>
        <view class='fon14_9b'>提现金额（100元起提）</view>
        <text class='fl mg_l30'>￥</text>
        <input class='fl fon50r_333' type='number'></input>
      </view>
      <view class='W_shoplist_03'>
        <text class='fon14_9b'>佣金金额￥1000 </text>
        <text class='fon14_pink mg_l20'>全部提现</text>
      </view>
      <view class='W_shoplist_btn W_jian_lr fon17_fff'>立即提现</view>
    </view>
  </swiper-item>
  <!-- 到微信 END-->


  <!-- 到支付宝 -->
  <swiper-item>
    <view class='W_shoplist pd_30'>
      <view class='W_shoplist_01 clearFix fon14_333 bd_ed'>
        <text class='fl'>账号</text>
        <input class='fl' placeholder='请输入支付宝账号'></input>
      </view>
      <view class='W_shoplist_01 clearFix fon14_333 bd_ed'>
        <text class='fl'>联系电话</text>
        <input class='fl' placeholder='请输入11位手机号' type='number'></input>
      </view>
      <view class='W_shoplist_02 bd_ed clearFix'>
        <view class='fon14_9b'>提现金额（100元起提）</view>
        <text class='fl mg_l30'>￥</text>
        <input class='fl fon50r_333' type='number'></input>
      </view>
      <view class='W_shoplist_03'>
        <text class='fon14_9b'>佣金金额￥1000 </text>
        <text class='fon14_pink mg_l20'>全部提现</text>
      </view>
      <view class='W_shoplist_btn W_jian_lr fon17_fff'>立即提现</view>
    </view>
  </swiper-item>

</swiper>